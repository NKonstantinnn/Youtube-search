  "license": "MIT",
  "scripts": {
    "clean": "rimraf bin/*",
    "tsc": "tsc",
    "copy-client": "cp -r ./client ./bin/client",
    "dev:start": "npm-run-all clean tsc start",
    "dev": "nodemon --watch src -e ts --exec yarn run dev:start",
    "start": "node .",
    "heroku-postbuild:start": "cd client && yarn install && yarn run build",
    "heroku-postbuild": "yarn run heroku-postbuild:start && yarn run copy-client"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.3.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.1.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "typegoose": "^5.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.2",
    "@types/mongoose": "^5.0.13",
    "@types/node": "^12.12.11",
    "@types/passport": "^1.0.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "nodemon": "^1.18.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0"
  }
}
